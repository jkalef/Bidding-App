<div class="sign-in-sign-up-forms">
  <div class="col-sm-12 col-md-6 col-md-offset-3">
    <div class="form-group">
      <h1>Create A New Auction:</h1>
      <br>
      <%= simple_form_for @auction do |f| %>
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "title" %>
        <br>
        <%= f.text_area :details, class: "form-control input-lg", placeholder: "Details" %>
        <br>
        <%= f.text_field :reserved_price, class: "form-control input-lg", placeholder: "reserved price" %>
        <br>
        <%= f.datetime_field :ends_on, class: "form-controler input-lg", placeholder: "End Date" %>
        <br>
        <br>
        <%= f.submit "Create Auction", class: "btn btn-success btn-centered btn-lg" %>
      <% end %>
    <div>
  </div>
</div>
